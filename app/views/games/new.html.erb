<h1>New game</h1>
<% @letters.each do |letter| %>
  <button type="button"><%= letter %></button>
<% end %>
<form action="/score" method="POST" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
  <p>What is the longest word you can find?</p>
  <input type="text" class="form-control" name="guess" value="<%= params[:guess] %>">
  <input type="submit" class="btn btn-primary" value="Play">
</form>
